<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
  <h2 class="mb-4 text-primary text-center"><%= title %></h2>

  <div class="row text-center mb-4">
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Tổng số môn học</h5>
          <p class="display-6 text-success"><%= totalCourses %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Tổng số sinh viên</h5>
          <p class="display-6 text-success"><%= totalUsers %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Tổng lượt đăng ký</h5>
          <p class="display-6 text-success"><%= totalRegistrations %></p>
        </div>
      </div>
    </div>
  </div>

  <h4 class="mt-5 mb-3">🏆 Top 5 môn học được đăng ký nhiều nhất</h4>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>Tên môn học</th>
        <th>Lượt đăng ký</th>
      </tr>
    </thead>
    <tbody>
      <% topCourses.forEach((item, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item.course.name %></td>
          <td><%= item.count %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <% if (mostRegistered) { %>
    <div class="alert alert-success mt-4">
      🏅 <strong>Môn học được đăng ký nhiều nhất:</strong>
      <strong><%= mostRegistered.course.name %></strong>
      với <strong><%= mostRegistered.count %></strong> lượt đăng ký.
    </div>
  <% } %>
  
  <% if (unregisteredCourses.length > 0) { %>
    <div class="alert alert-warning mt-4">
      ⚠️ <strong>Các môn học chưa có ai đăng ký:</strong>
      <ul>
        <% unregisteredCourses.forEach(c => { %>
          <li><%= c.name %></li>
        <% }) %>
      </ul>
    </div>
  <% } else { %>
    <div class="alert alert-info mt-4">
      ✅ Tất cả môn học đều đã có lượt đăng ký.
    </div>
  <% } %>

  <a href="/admin/dashboard" class="btn btn-secondary mt-2">Quay lại trang admin dashboard</a>
</body>
</html>
