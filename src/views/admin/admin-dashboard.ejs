<!-- admin-dashboard.ejs -->
<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h2 class="text-center text-primary"><%= title %></h2>
        <p class="text-center">Chào mừng admin, bạn có quyền truy cập vào trang này.</p>
      </div>

      <div>
        <span class="me-2 ms-2 align-self-center text-success fw-bold">Hi, <%= admin.username %></span>
        <a href="/admin/logout" class="btn btn-outline-secondary">Đăng xuất</a>
      </div>
    </div>

    <!-- Ví dụ về các chức năng quản lý -->
    <a href="/admin/manage-courses" class="btn btn-primary w-100">Quản lý môn học</a>
    <a href="/admin/manage-registrations" class="btn btn-success w-100 mt-3">Quản lý đăng ký môn học</a>
    <a href="/admin/stats" class="btn btn-info w-100 mt-3">Thống kê tổng quan</a>
  </div>
</body>
</html>
