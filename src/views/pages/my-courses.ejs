<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <h2 class="text-center text-primary mb-4"><%= title %></h2>

    <% if (registrations.length > 0) { %>
      <ul class="list-group">
        <% registrations.forEach(reg => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><strong><%= reg.courseId.name %></strong></span>
            <form action="/courses/unregister/<%= reg.courseId._id %>" method="POST" onsubmit="return confirm('Bạn có chắc muốn huỷ đăng ký này?')">
              <button type="submit" class="btn btn-danger btn-sm">Hủy đăng ký</button>
            </form>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p class="text-center">Bạn chưa đăng ký môn học nào.</p>
    <% } %>

    <div class="text-center mt-4">
      <a href="/" class="btn btn-secondary">Quay về trang chủ</a>
    </div>
  </div>
</body>
</html>
